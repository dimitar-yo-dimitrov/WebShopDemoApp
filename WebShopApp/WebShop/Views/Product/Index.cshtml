@model IEnumerable<ProductDto>

<h1>@ViewData["Title"]</h1>

<div class="d-grid gap-2 mb-2">
    <a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add Product</a>
</div>

@if (Model.Any())
{
    <table class="table table-hover">
        <thead>
            <tr>
                <td>Name</td>
                <td>Price</td>
                <td>Quantity</td>
                <td>Buy</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td><button class="btn btn-success">Buy</button></td>
                    <td>
                        <form asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id.ToString()">
                                <button type="submit" value="Delete" class="btn btn-danger" onclick="myConfirm(event)">Delete</button>
                        </form>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <p class="text-center">No product yet!</p>
}

@section Scripts {
    <script>
        function myConfirm(e) {
            e.preventDefault();
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire(
                        'Deleted!',
                        'Your file has been deleted.',
                        'success'
                    ).then((resultDeleted) => {
                        e.target.parentElement.style.display = 'none';;
                    })
                }
            })
        }
    </script>
}
